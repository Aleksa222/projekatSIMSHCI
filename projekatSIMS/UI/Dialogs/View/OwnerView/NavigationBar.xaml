<UserControl x:Class="projekatSIMS.UI.Dialogs.View.OwnerView.NavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:projekatSIMS.UI.Dialogs.View.OwnerView"
             mc:Ignorable="d" 
             Background="Transparent"
             d:DesignHeight="768" d:DesignWidth="1366">
   
         <Grid>
            <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Style ="{StaticResource ColumnGlowEffect}" CornerRadius="20" Margin="20" >
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#21535B" Offset="0.3"/>
                                <GradientStop Color="#051a2d" Offset="0.7"/>
                    </LinearGradientBrush>
                </Border.Background>


                <Grid>
                    <Grid VerticalAlignment="Top">
                        <Button Background="Transparent" BorderBrush="Transparent" >
                            <Image Source="ownerpics/logo2.png" Width="20" Height="50"/>
                        </Button>
                    </Grid>
                    <StackPanel VerticalAlignment="Center">

                        <Button Style="{StaticResource homeButton}" Margin="0,20" Command="{Binding GoToHomePageCommand}">
                            <Image Source="ownerpics/home.png" Width="20" Height="50"/>
                        </Button>

                        <Button Style="{StaticResource homeButton}" Margin="0,20" Command="{Binding GoToUserAccountPageCommand}">
                            <Image Source="ownerpics/user.png" Width="20" Height="50"/>
                        </Button>

                        <Button Style="{StaticResource homeButton}" Margin="0,20">
                            <Image Source="ownerpics/bed.png" Width="20" Height="50"/>
                        </Button>

                        <Button Style="{StaticResource homeButton}" Margin="0,20">
                            <Image Source="ownerpics/calendar.png" Width="20" Height="50"/>
                        </Button>

                        <Button Style="{StaticResource homeButton}" Margin="0,20">
                            <Image Source="ownerpics/chat.png" Width="20" Height="50"/>
                        </Button>



                    </StackPanel>

                    <Grid VerticalAlignment="Bottom">
                        <Button Style="{StaticResource homeButton}" VerticalAlignment="Bottom" Command="{Binding LogOutPageCommand}">
                            <Image Source="ownerpics/logout.png" Width="20" Height="30"/>
                        </Button>

                    </Grid>
                </Grid>

            </Border>
        </Grid>
    </Grid>
 
</UserControl>
