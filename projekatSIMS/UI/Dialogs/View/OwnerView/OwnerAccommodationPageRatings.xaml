                                    <DropShadowEffect Color="#dadada" Direction="320" ShadowDepth="10" Opacity="0.5"/>
                                </TextBlock.Effect>

                            </TextBlock>
                            <TextBlock Foreground="#312c28" TextAlignment="Center" Text="{Binding OwnerPoliteness}" Margin="234,12,-56,40" FontFamily="Poppins SemiBold" FontSize="15" Grid.Column="1" >
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="#dadada" Direction="320" ShadowDepth="10" Opacity="0.5"/>
                                </TextBlock.Effect>

                            </TextBlock>
                            <TextBlock Foreground="#312c28" TextAlignment="Center" Text="{Binding Cleanliness}" Margin="234,41,-56,11" FontFamily="Poppins SemiBold" FontSize="15" Grid.Column="1" >
                                <TextBlock.Effect>
