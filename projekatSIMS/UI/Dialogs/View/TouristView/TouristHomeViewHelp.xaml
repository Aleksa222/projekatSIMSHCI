        <Button Content="Reserve available tour" Grid.Column="1" Command="{Binding ReserveCommand}" Foreground="Black" FontSize="19" FontWeight="Bold" FontFamily="Montserrat" Cursor="Hand" Margin="33,88,33,67" Grid.Row="1">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#808080" Offset="0"/>
                                <GradientStop Color="#C0C0C0" Offset="0.6"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Width="250" Height="100" CornerRadius="20" Background="{TemplateBinding Background}" BorderBrush="Black" BorderThickness="1">
                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
            <i:Interaction.Triggers>
                <i:KeyTrigger Key="R" Modifiers="Ctrl">
                    <i:InvokeCommandAction Command="{Binding ReserveCommand}" />
                </i:KeyTrigger>
            </i:Interaction.Triggers>
        </Button>

