<Page x:Class="projekatSIMS.UI.Dialogs.View.TouristView.TouristTourRequestView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:projekatSIMS.UI.Dialogs.View.TouristView"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:Icon="http://schemas.fontawesome.io/icons/"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="TouristTourRequestView">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="316*"></ColumnDefinition>
            <ColumnDefinition Width="537*"></ColumnDefinition>
            <ColumnDefinition Width="427*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="130"></RowDefinition>
            <RowDefinition Height="270"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Grid.RowSpan="4">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#D3D3D3" Offset="0"/>
                    <GradientStop Color="#C0C0C0" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="#808080" Offset="1"/>
                    <GradientStop Color="#C0C0C0" Offset="0"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <Border CornerRadius="12" Grid.ColumnSpan="3" Grid.Column="0" Grid.Row="1" Grid.RowSpan="2">
            <Border BorderThickness="2">
                <Border.BorderBrush>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#242582" Offset="0"/>
                        <GradientStop Color="#2F2FA2" Offset="1"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                        <GradientStop Color="#242582" Offset="1"/>
                        <GradientStop Color="#2F2FA2" Offset="0"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
        </Border>

        <Button Grid.Row="2" Grid.Column="1" FontSize="19" Content="Send request" FontWeight="Bold" Command="{Binding SubmitCommand}" Margin="201,119,70,50" IsTabStop="False">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#808080" Offset="0"/>
                                <GradientStop Color="#C0C0C0" Offset="0.6"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Width="200" Height="100" CornerRadius="20" Background="{TemplateBinding Background}" BorderBrush="Black" BorderThickness="1">
                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
            <i:Interaction.Triggers>
                <i:KeyTrigger Key="Return" Modifiers="Ctrl">
                    <i:InvokeCommandAction Command="{Binding SubmitCommand}" />
                </i:KeyTrigger>
            </i:Interaction.Triggers>
        </Button>

        <TextBlock Text="ADVENTO" Grid.Row="0" Foreground="Black" FontSize="35" FontWeight="Medium" FontFamily="Playfair Display" HorizontalAlignment="Left" Margin="138,43,0,43" Width="160"/>
        <TextBlock Text="Request a new tour:" Grid.Row="1" Foreground="White" FontSize="35" FontWeight="Bold" FontFamily="Playfair Display" HorizontalAlignment="Left" Margin="168,35,0,191" Width="332" Grid.Column="1"/>
        <TextBlock Text="Create your own" Grid.Row="0" Foreground="Black" FontSize="12" FontWeight="Medium" FontFamily="Montserrat" HorizontalAlignment="Left" Margin="134,81,0,35" Width="90"/>
        <TextBlock Text="ADVENTURE" Grid.Row="0" Foreground="Black" FontSize="12" FontWeight="Medium" FontFamily="Montserrat" HorizontalAlignment="Left" Margin="229,81,0,38" Width="69"/>
        <TextBlock Text="CTRL + H" Foreground="Black" FontSize="18" FontWeight="Medium" FontFamily="Playfair Display" HorizontalAlignment="Left" Margin="319,18,0,90" Grid.Column="2" Width="76"/>
        <Image Source="https://img.icons8.com/dusk/256/globe-earth.png" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Width="100" Height="100" Margin="10,0,0,0"/>
        <Image Source="https://img.icons8.com/dusk/256/globe-earth.png" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Width="20" Height="20" RenderTransformOrigin="7.655,0.85" Margin="324,0,0,0" />
        <Icon:FontAwesome Icon="Question" Foreground="SlateGray" FontSize="60" Grid.Column="2" Margin="319,40,27,29"/>
        <TextBlock Text="Help" Grid.Row="0" Grid.Column="2" Foreground="Black" FontSize="12" FontWeight="Medium" FontFamily="Montserrat" HorizontalAlignment="Left" Margin="345,106,0,10" Width="28"/>
        <TextBlock Text="CTRL+ENTER" Grid.Row="2" Foreground="White" FontSize="18" FontWeight="Medium" FontFamily="Montserrat" HorizontalAlignment="Left" Margin="280,220,0,33" Grid.Column="1" Width="108" RenderTransformOrigin="0.467,0.671"/>
        <TextBlock Text="Country:" Grid.Row="1" Foreground="White" FontSize="18" FontWeight="Medium" FontFamily="Montserrat" HorizontalAlignment="Left" Margin="0,113,0,135" Width="189" RenderTransformOrigin="-0.076,-15.776" Grid.Column="1"/>
        <TextBlock Text="City:" Grid.Row="1" Foreground="White" FontSize="18" FontWeight="Medium" FontFamily="Montserrat" HorizontalAlignment="Left" Margin="0,153,0,95" Width="189" RenderTransformOrigin="-0.076,-15.776" Grid.Column="1"/>
        <TextBlock Text="Description:" Grid.Row="1" Foreground="White" FontSize="18" FontWeight="Medium" FontFamily="Montserrat" HorizontalAlignment="Left" Margin="0,195,0,53" Width="189" RenderTransformOrigin="-0.076,-15.776" Grid.Column="1"/>
        <TextBlock Text="Language:" Grid.Row="1" Foreground="White" FontSize="18" FontWeight="Medium" FontFamily="Montserrat" HorizontalAlignment="Left" Margin="0,238,0,10" Width="189" RenderTransformOrigin="-0.076,-15.776" Grid.Column="1"/>
        <TextBlock Text="Guest number:" Grid.Row="2" Foreground="White" FontSize="18" FontWeight="Medium" FontFamily="Montserrat" HorizontalAlignment="Left" Margin="0,10,0,238" Width="189" RenderTransformOrigin="-0.076,-15.776" Grid.Column="1"/>
        <TextBlock Text="End date:" Grid.Row="1" Foreground="White" FontSize="18" FontWeight="Medium" FontFamily="Montserrat" HorizontalAlignment="Left" Margin="508,222,0,26" Width="85" RenderTransformOrigin="-0.076,-15.776" Grid.Column="1" Grid.ColumnSpan="2"/>
        <TextBlock Text="Starting date:" Grid.Row="1" Foreground="White" FontSize="18" FontWeight="Medium" FontFamily="Montserrat" HorizontalAlignment="Left" Margin="494,113,0,135" Width="113" RenderTransformOrigin="-0.076,-15.776" Grid.Column="1" Grid.ColumnSpan="2"/>
        <TextBlock Text="CTRL + P" Foreground="Black" FontSize="18" FontWeight="Medium" FontFamily="Playfair Display" HorizontalAlignment="Left" Margin="195,18,0,90" Grid.Column="2" Width="74"/>
        <Icon:FontAwesome Icon="User" FontSize="60" Grid.Column="2" Margin="197,40,148,29"/>
        <TextBlock Text="Back to Main Page" Grid.Row="0" Grid.Column="2" Foreground="Black" FontSize="12" FontWeight="Medium" FontFamily="Montserrat" HorizontalAlignment="Left" Margin="185,106,0,10" Width="106"/>

        <TextBox Text="{Binding State, Mode=TwoWay}" Margin="139,113,269,135" Grid.Column="1" Grid.Row="1" TabIndex="0"/>
        <TextBox Text="{Binding Description, Mode=TwoWay}" Margin="139,195,269,53" Grid.Column="1" Grid.Row="1" TabIndex="2"/>
        <TextBox Text="{Binding City, Mode=TwoWay}" Margin="140,153,269,95" Grid.Column="1" Grid.Row="1" TabIndex="1"/>
        <TextBox Text="{Binding GuestNumber, Mode=TwoWay}" Margin="140,10,269,238" Grid.Column="1" Grid.Row="2" TabIndex="4"/>
        <TextBox Text="{Binding Language, Mode=TwoWay}" Margin="139,238,270,10" Grid.Column="1" Grid.Row="1" TabIndex="3"/>
        <TextBlock Text="SHIFT+E" Grid.Row="2" Foreground="White" FontSize="16" FontWeight="Medium" FontFamily="Montserrat" HorizontalAlignment="Left" Margin="516,8,0,236" Grid.Column="1" Width="64" RenderTransformOrigin="0.467,0.671" Grid.ColumnSpan="2"/>
        <TextBlock Text="SHIFT+S" Grid.Row="1" Foreground="White" FontSize="16" FontWeight="Medium" FontFamily="Montserrat" HorizontalAlignment="Left" Margin="516,175,0,73" Grid.Column="1" Width="69" RenderTransformOrigin="0.467,0.671" Grid.ColumnSpan="2"/>

        <DatePicker FontFamily="Bahnschrift SemiLight" SelectedDate="{Binding StartDate, Mode=TwoWay}" IsDropDownOpen="{Binding IsEndDatePickerOpened}" FontSize="17" Foreground="#244035" Margin="473,245,336,265" Grid.Column="1" Grid.Row="1" DisplayDate="{Binding DefaultStartDate}" Grid.ColumnSpan="2" Grid.RowSpan="2" IsTabStop="False" />
        <DatePicker FontFamily="Bahnschrift SemiLight" FontSize="17" SelectedDate="{Binding EndDate, Mode=TwoWay}" IsTabStop="False" IsDropDownOpen="{Binding IsStartDatePickerOpened}" Foreground="#244035" Margin="473,140,336,100" Grid.Column="1" Grid.Row="1" DisplayDate="{Binding DefaultStartDate}" Grid.ColumnSpan="2"/>
        <i:Interaction.Triggers>
            <i:KeyTrigger Key="S" Modifiers="Shift">
                <i:InvokeCommandAction Command="{Binding OpenStartDatePickerCommand}" />
            </i:KeyTrigger>
            <i:KeyTrigger Key="E" Modifiers="Shift">
                <i:InvokeCommandAction Command="{Binding OpenEndDatePickerCommand}" />
            </i:KeyTrigger>
        </i:Interaction.Triggers>
    </Grid>
</Page>
